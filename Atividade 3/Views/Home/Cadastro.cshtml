@model Aluno

@{

    ViewData["Title"] = "Cadastro";
}
<h1>@ViewData["Title"]</h1>


<form method="POST">

    <p>
        <label asp-for="Nome">Nome: </label>
        <input asp-for="Nome" />
    </p>

    <p>
        <label asp-for="Telefone">Telefone: </label>
        <input asp-for="Telefone" />
    </p>

    <p>
        <label asp-for="Data">Data: </label>
        <input asp-for="Data" />
    </p>

    <p>
        <label asp-for="Animal">Qual seu animal?</label><br />
        <select class="form-control" id="Animal">
            <option id="Animal" name="Animal" value="Cachorro">Cachorro</option>
            <option id="Animal" name="Animal" value="Gato">Gato</option>
            <option id="Animal" name="Animal" value="Passarinho">Passarinho</option>
            <option id="Animal" name="Animal" value="Outros">Outros</option>
        </select>
    </p>

    <p>
        <label asp-for="Necessidade">Necessidade: </label>
        <input asp-for="Necessidade" />
    </p>

    <p>
        <label asp-for="Valor">Valor: </label>
        <input asp-for="Valor" />
    </p>

    <input type="submit" value="Cadastrar">
</form>
